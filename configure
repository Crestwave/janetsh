#!/bin/sh

set -eu

fail() {
  echo "$0: $*" >&2
  exit 1
}

usage () {
  cat <<EOF
./configure CC=... CFLAGS=... LDFLAGS=... --prefix=... --janet-header-cflags=...
EOF
  exit 1
}

janetheadercflags=""
prefix="/usr"
CC="${CC:-cc}"
CFLAGS="${CFLAGS:--Wall -O2}"
LDFLAGS="${LDFLAGS:-}"

for arg ; do
  case "$arg" in
  --prefix=*) prefix=${arg#*=} ;;  
  --janet-header-cflags=*) janetheadercflags=${arg#*=} ;;
  CC=*) CC=${arg#*=} ;;
  CFLAGS=*) CFLAGS=${arg#*=} ;;
  --help) usage ;;
  *) fail "unknown option '$arg'"
  esac
done

check_janet_headers () {
  cfile="$(mktemp -u).c"
  cat <<EOF > "$cfile"
  #include <janet.h>
  int main() { return 0; }
EOF
  $CC -c "$cfile" $janetheadercflags -o /dev/null > /dev/null 2>&1
  ok="$?"
  rm "$cfile"
  return "$ok"
}

if [ -z "$janetheadercflags" ]; then
  echo "Looking for janet headers..."
  if ! check_janet_headers
  then
    echo "janet headers not found, trying pkg-config..."
    janetheadercflags=$(pkg-config --cflags janet)
  fi
  if ! check_janet_headers
  then
    fail "unable to find working janet headers."
    exit 1
  fi
fi

CFLAGS="-fPIC ${CFLAGS} ${janetheadercflags}"

echo "configured with:"
echo "prefix=${prefix}"
echo "CC=$CC"
echo "CFLAGS=$CFLAGS"
echo "LDFLAGS=$LDFLAGS"

echo "writing config.mk"
cat >config.mk <<EOF
PREFIX=${prefix}
CC=${CC}
CFLAGS=${CFLAGS}
LDFLAGS=${LDFLAGS}
EOF

